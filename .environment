# Running EF Core tests on local SQL Server
export Test__SqlServer__DefaultConnection="Server=localhost;Database=test;User=SA;Password=Abcd5678;Connect Timeout=60;ConnectRetryCount=0"

# Run only latest TFM for EF Core tests
export DeveloperBuild=true

export EDITOR=vim
export DOTNET_ROOT="$HOME/.dotnet"
export PATH="$HOME/bin:$HOME/.dotnet:$HOME/.dotnet/tools:$PATH:/opt/mssql-tools/bin:$HOME/gems/bin:$HOME/.cargo/bin"

# Necessary for zsh-autosuggestions to work under tmux
export TERM=xterm-256color

# Install Ruby Gems to ~/gems
export GEM_HOME="$HOME/gems"

